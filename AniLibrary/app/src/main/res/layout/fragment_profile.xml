<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="56dp"
    tools:context=".ui.fragment.ProfileFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/purple_10">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="30dp"
                app:cardCornerRadius="10dp"
                android:layout_marginStart="20dp">
                <ImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:adjustViewBounds="true"
                    app:layout_constraintDimensionRatio="H,1:1"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginStart="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/grey_transparent"
                    android:textSize="18sp"
                    android:text="@string/hello"
                    tools:text="Hello"/>
                <TextView
                    android:id="@+id/tv_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    tools:text="Senko-san"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp">
                <ImageView
                    android:id="@+id/edit_profile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle"
                    android:padding="8dp"
                    android:src="@drawable/edit_icon" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/watch_list"
                android:textColor="?android:textColorPrimary"
                android:textSize="25sp"
                android:layout_marginBottom="20dp"/>
            <LinearLayout
                android:id="@+id/allListButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@drawable/rounded_rect_bold_name"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all_list"
                    android:textColor="?android:textColorPrimary"
                    android:fontFamily="sans-serif"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/allListNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="20sp"
                    android:textAlignment="textEnd"
                    tools:text="1000"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/watchedListButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@drawable/rounded_rect_bold_name"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/watched"
                    android:textColor="?android:textColorPrimary"
                    android:fontFamily="sans-serif"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/watchedListNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    android:textAlignment="textEnd"
                    tools:text="1000"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/plannedListButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@drawable/rounded_rect_bold_name"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/planned"
                    android:textColor="?android:textColorPrimary"
                    android:fontFamily="sans-serif"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/plannedListNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/red"
                    android:textSize="20sp"
                    android:textAlignment="textEnd"
                    tools:text="1000"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|bottom"
        android:layout_marginBottom="50dp">
        <Button
            android:id="@+id/logOutButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:visibility="visible"
            android:background="@drawable/button"
            android:text="@string/logout"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>