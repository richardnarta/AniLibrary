<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.DetailFragment"
    android:layout_marginVertical="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="5dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shimmer_duration="1000">

            <include layout="@layout/fragment_detail_skeleton"
                android:id="@+id/skeletonView"
                android:visibility="visible"/>
        </com.facebook.shimmer.ShimmerFrameLayout>

        <LinearLayout
            android:id="@+id/errorMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:visibility="gone"
            android:orientation="vertical">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="320dp"
                android:src="@drawable/kubo_error"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:textColor="?android:textColorPrimary"
                android:textSize="20sp"
                android:layout_marginVertical="10dp"
                android:text="@string/rto"/>

            <Button
                android:id="@+id/retryButton"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:fontFamily="sans-serif-black"
                android:textAllCaps="false"
                android:layout_marginBottom="5dp"
                android:background="@drawable/button"
                android:textAlignment="center"
                android:text="@string/retry"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/animeDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginEnd="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:textSize="20sp"
                        android:textColor="?android:textColorPrimary"
                        android:textStyle="bold"
                        tools:text="5-toubun no Hanayome ∬"/>
                    <TextView
                        android:id="@+id/tv_alt_title_en"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:textSize="15sp"
                        tools:text="The Quintessential Quintuplets 2"/>
                    <TextView
                        android:id="@+id/tv_alt_title_jp"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:textSize="15sp"
                        tools:text="The Quintessential Quintuplets 2"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:fontFamily="sans-serif"
                        android:textColor="?android:textColorPrimary"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        tools:text="★ 8.06"/>
                    <TextView
                        android:id="@+id/tv_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:fontFamily="sans-serif"
                        android:textSize="13sp"
                        tools:text="415.820 Users"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_rank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                android:textColor="?android:textColorPrimary"
                android:textStyle="bold"
                tools:text="Rank : #527"
                android:layout_marginBottom="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">
                    <ImageView
                        android:id="@+id/iv_img"
                        android:layout_width="190dp"
                        android:layout_height="265dp"
                        tools:src="@drawable/poster"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:textSize="20sp"
                        android:textColor="?android:textColorPrimary"
                        android:textStyle="bold"
                        android:text="@string/synopsis"/>
                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fadeScrollbars="false">
                        <TextView
                            android:id="@+id/tv_synopsis"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:textSize="12.5sp"
                            android:layout_marginEnd="5dp"
                            tools:text="Through their tutor Fuutarou Uesugi's diligent guidance, the Nakano quintuplets' academic performance shows signs of improvement, even if their path to graduation is still rocky. However, as they continue to cause various situations that delay any actual tutoring, Fuutarou becomes increasingly involved with their personal lives, further complicating their relationship with each other. On another note, Fuutarou slowly begins to realize the existence of a possible connection between him and the past he believes to have shared with one of the five girls. With everyone's feelings beginning to develop and overlap, will they be able to keep their bond strictly to that of a teacher and his students—or will it mature into something else entirely?"/>
                    </androidx.core.widget.NestedScrollView>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                android:textColor="?android:textColorPrimary"
                android:textStyle="bold"
                android:text="@string/information"
                android:layout_marginBottom="15dp"/>
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="15sp"
                tools:text="Type : TV"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/tv_episode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="15sp"
                tools:text="Episodes : 12 Eps"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="15sp"
                tools:text="Status : Finished"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/tv_season"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="15sp"
                tools:text="Premiered : Winter 2021"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/tv_studios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="15sp"
                tools:text="Studios : Bibury Animation Studios"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/tv_genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="15sp"
                tools:text="Genre : Comedy, Romance"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?android:textColorPrimary"
                        android:textAlignment="center"
                        android:text="@string/add_watch_list"
                        android:layout_marginBottom="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                        <Button
                            android:id="@+id/PlannedButton"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button"
                            android:text="@string/planned"
                            android:layout_marginHorizontal="10dp"/>
                        <Button
                            android:id="@+id/WatchedButton"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button"
                            android:text="@string/watched"
                            android:layout_marginHorizontal="10dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</ScrollView>