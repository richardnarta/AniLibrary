<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AniLibrary" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_30</item>
        <item name="colorPrimaryVariant">@color/purple_30</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_10</item>
        <item name="colorSecondaryVariant">@color/purple_10</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="editTextBackground">@color/white</item>
    </style>
    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/purple_30</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="CardView.Color" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/purple_cv</item>
    </style>
    <style name="EditText.Background" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">?android:colorBackground</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo_day</item>
        <item name="postSplashScreenTheme">@style/Theme.AniLibrary</item>
    </style>
</resources>